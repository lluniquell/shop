<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybats-3-mapper.dtd">
<mapper namespace="kr.co.shop.mapper.MemberMapper">
  <insert id="memberinput_ok" parameterType="kr.co.shop.vo.MemberVO">
    insert into member(userid,name,pwd,zip,juso,juso_etc,phone,email,writeday)
    values(#{userid},#{name},#{pwd},#{zip},#{juso},#{juso_etc},#{phone},#{email},now())
  </insert>
  
  <select id="check_userid" resultType="Integer">
    select count(*) from member where userid=#{param1}
  </select>
  
  <insert id="cwrite_ok" parameterType="kr.co.shop.vo.CounselVO">
  insert into counsel(userid,title,content,writeday)
  values(#{userid},#{title},#{content},now())
  </insert>
  
  <select id="clist" resultType="kr.co.shop.vo.CounselVO">
  	select * from counsel where userid=#{param1}
  	order by id desc
  </select>
  
  <select id="ccontent" resultType="kr.co.shop.vo.CounselVO">
  	select * from counsel where id=#{param1}
  </select>
  
  <delete id="ccontent_del">
  	delete from counsel where id=#{param1}
  </delete>
  
   <update id="ccontent_update_ok" parameterType="kr.co.shop.vo.CounselVO">
  	update counsel set title=#{title}, content=#{content} where id=#{id}
  </update>

</mapper>  